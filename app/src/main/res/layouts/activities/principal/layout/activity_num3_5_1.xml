<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".Num3_5_1Activity">


    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/selecciona_numero"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />


    <!-- lado izquierdo -->
    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@id/textViewNumber"
        android:layout_margin="8dp"
        android:layout_marginLeft="@dimen/cardview_default_elevation"
        android:background="@drawable/num_uno_color"
        android:elevation="10dp"
        android:padding="10dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@id/textViewNumber"
        android:layout_margin="8dp"
        android:layout_toEndOf="@id/imageButton1"
        android:background="@drawable/num_uno_color" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@id/imageButton1"
        android:layout_margin="8dp"
        android:background="@drawable/num_uno_color"
        android:cropToPadding="false"
        android:padding="10dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@id/imageButton2"
        android:layout_margin="8dp"
        android:layout_toEndOf="@id/imageButton3"
        android:background="@drawable/num_uno_color" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@id/imageButton3"
        android:layout_margin="8dp"
        android:background="@drawable/num_uno_color" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@id/imageButton4"
        android:layout_margin="8dp"
        android:layout_toEndOf="@id/imageButton5"
        android:background="@drawable/num_uno_color" />

    <Button
        android:id="@+id/button3"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imageButton6"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@color/colorSteelBlue"
        android:text="@string/izquierda"
        />


    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/button3"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:background="@drawable/mano_izq" />



    <!-- lado derecho -->


    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@id/textViewNumber"
        android:layout_margin="8dp"

        android:layout_toStartOf="@id/imageButton8"
        android:background="@drawable/num_uno_color" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textViewNumber"

        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/num_uno_color" />


    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@id/imageButton7"
        android:layout_margin="8dp"

        android:layout_toStartOf="@id/imageButton8"
        android:background="@drawable/num_uno_color" />

    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/imageButton7"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/num_uno_color" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@id/imageButton10"
        android:layout_margin="8dp"
        android:layout_toStartOf="@id/imageButton12"
        android:background="@drawable/num_uno_color" />


    <ImageButton
        android:id="@+id/imageButton12"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/imageButton9"

        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/num_uno_color" />


    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/imageButton12"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorMediumSeaGreen"
        android:editable="false"
        android:text="@string/derecha" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/button4"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:background="@drawable/mano_der" />




</RelativeLayout>
