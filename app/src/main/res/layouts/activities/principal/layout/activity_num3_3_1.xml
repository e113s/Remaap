<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="anel.com.mx.kgardenapp.Num3_3_1Activity">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/aclonica"
            android:text="@string/selec_tarjetas"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardView0"
            android:layout_width="273dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textAlignment="center"
            app:cardCornerRadius="4dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="259dp"
                android:layout_height="176dp">

                <ImageView
                    android:id="@+id/imageView0"
                    android:layout_width="261dp"
                    android:layout_height="176dp"
                    app:srcCompat="@drawable/col_diez_b" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/aclonica"
            android:text="@string/selec_tarjetas"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="749dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:textDirection="inherit"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="127dp"
                android:layout_height="147dp"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="1dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="1dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="117dp"
                    android:layout_height="133dp"
                    android:layout_weight="1"
                    android:baseline="@dimen/cardview_default_radius"
                    android:paddingBottom="@dimen/cardview_default_elevation"
                    app:srcCompat="@drawable/col_ocho_b"
                    tools:baseline="@dimen/cardview_default_elevation" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:layout_width="wrap_content"
                android:id="@+id/cardView2"
                android:layout_height="147dp"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="105dp"
                    android:layout_height="133dp"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/cardview_default_elevation"
                    app:srcCompat="@drawable/col_nueve_b" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="wrap_content"
                android:layout_height="142dp"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"

                app:cardCornerRadius="4dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="105dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/cardview_default_elevation"
                    app:srcCompat="@drawable/col_dos_b1" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>






</RelativeLayout>
