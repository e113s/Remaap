<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorWhite2"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Num3_5Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selecciona_numero"
            android:fontFamily="@font/aclonica"
            android:textColor="@color/colorAccent"
            android:layout_margin="25dp"
            android:textAlignment="center"
            android:textSize="24sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="430dp"

            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="10dp">


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="198dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:clickable="true"

                android:textAlignment="center"
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"

                    android:orientation="vertical">

                    <ToggleButton
                        android:id="@+id/imageButtonIzquierda"
                        android:layout_width="114dp"
                        android:layout_height="175dp"
                        android:layout_margin="7dp"
                        android:background="@drawable/num_uno_color"
                        android:text=""
                        android:textOff=" "
                        android:textOn=" " />

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="10dp"
                android:layout_height="198dp"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_row="0"
                android:layout_rowWeight="2"
                android:elevation="2dp"
                android:textAlignment="center"
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="6dp"
                    android:orientation="vertical">

                    <ToggleButton
                        android:id="@+id/imageButtonDerecha"
                        android:layout_width="114dp"
                        android:layout_height="175dp"
                        android:layout_margin="7dp"
                        android:background="@drawable/num_uno_color"
                        android:text=""
                        android:textOff=" "
                        android:textOn=" " />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <Button
                android:id="@+id/button3"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/imageButton6"
                android:layout_centerVertical="true"
                android:layout_column="0"
                android:layout_columnWeight="10"
                android:layout_margin="3dp"
                android:layout_row="3"
                android:background="@color/colorSteelBlue"
                android:text="@string/izquierda" />


            <ImageButton
                android:layout_width="80dp"
                android:layout_height="136dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_column="0"
                android:layout_columnWeight="2"
                android:layout_margin="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:layout_rowWeight="3"
                android:background="@drawable/mano_izq" />

            <Button
                android:id="@+id/button4"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/imageButton12"
                android:layout_centerVertical="true"
                android:layout_column="1"
                android:layout_columnWeight="10"
                android:layout_margin="3dp"
                android:layout_row="3"
                android:background="@color/colorMediumSeaGreen"
                android:text="@string/derecha" />


            <ImageButton
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_columnWeight="2"
                android:layout_margin="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:background="@drawable/mano_der" />


        </GridLayout>
    </LinearLayout>

</LinearLayout>
