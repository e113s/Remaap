<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorWhite2"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".IM_P1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selecciona_moneda"
            android:fontFamily="@font/aclonica"
            android:textColor="@color/colorAccent"
            android:layout_margin="25dp"
            android:textAlignment="center"
            android:textSize="24sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="348dp"
            android:layout_height="430dp"
            android:layout_weight="8"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="14dp"
            android:rowCount="3">




            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_rowWeight="10"
                android:textAlignment="center"
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <ToggleButton
                        android:id="@+id/imageButtonIzquierda"
                        android:layout_width="114dp"
                        android:layout_height="206dp"
                        android:layout_margin="7dp"
                        android:background="@drawable/moneda_un_peso"
                        android:text=""
                        android:textOff=" "
                        android:textOn=" " />


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_columnWeight="2"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_rowWeight="2"
                android:elevation="@dimen/cardview_default_elevation"
                android:textAlignment="center"
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="6dp"

                    android:orientation="vertical">

                    <ToggleButton
                        android:id="@+id/imageButtonDerecha"
                        android:layout_width="114dp"
                        android:layout_height="206dp"
                        android:layout_margin="7dp"
                        android:background="@drawable/moneda_un_peso"
                        android:text=""
                        android:textOff=" "
                        android:textOn=" " />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <ImageButton
                android:layout_width="80dp"
                android:layout_height="136dp"
                android:layout_alignParentRight="true"

                android:layout_centerVertical="true"
                android:layout_columnWeight="2"
                android:layout_margin="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:layout_rowWeight="1"
                android:background="@drawable/mano_izq" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="136dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_columnWeight="2"
                android:layout_margin="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:layout_rowWeight="2"
                android:background="@drawable/mano_der" />


        </GridLayout>
    </LinearLayout>

</LinearLayout>