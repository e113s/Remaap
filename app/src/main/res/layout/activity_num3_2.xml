<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Num3_2Activity">


    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="365dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/aclonica"
            android:text="@string/instruccion"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:textDirection="inherit">

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewNumeroUno"

                android:layout_width="335dp"
                android:layout_height="145dp"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="1dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="1dp"
                android:textAlignment="center"
                app:cardCornerRadius="4dp"
                app:cardElevation="10dp">


                <LinearLayout
                    android:layout_width="317dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewNumeroUno"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1"
                        app:srcCompat="@drawable/num_uno_azul" />

                    <ImageView
                        android:id="@+id/imageViewOperador"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/signo_mas" />

                    <ImageView
                        android:id="@+id/imageViewNumeroDos"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/num_dos_azul" />

                    <ImageView
                        android:id="@+id/imageViewResultado"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/signo_igual" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
        <TextView
            android:id="@+id/textViewOperacion"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:fontFamily="@font/aclonica"
            android:text="R E S U L T A D O"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp"
        android:orientation="horizontal"
        android:textDirection="inherit">


        <android.support.v7.widget.CardView
            android:id="@+id/cardViewOpcionUno"
            android:layout_width="110dp"
            android:layout_height="145dp"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="1dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/imageViewOpcionUno"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:baseline="@dimen/cardview_default_radius"
                android:paddingBottom="@dimen/cardview_default_elevation"
                app:srcCompat="@drawable/num_tres_azul"
                tools:baseline="@dimen/cardview_default_elevation" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView

            android:id="@+id/cardViewOpcionDos"
            android:layout_width="110dp"
            android:layout_height="145dp"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="10dp">

            <ImageView

                android:id="@+id/imageViewOpcionDos"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:paddingBottom="@dimen/cardview_default_elevation"
                app:srcCompat="@drawable/num_nueve_azul" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewOpcionTres"
            android:layout_width="110dp"
            android:layout_height="145dp"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/imageViewOpcionTres"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:paddingBottom="@dimen/cardview_default_elevation"
                app:srcCompat="@drawable/num_diez_azul" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>

